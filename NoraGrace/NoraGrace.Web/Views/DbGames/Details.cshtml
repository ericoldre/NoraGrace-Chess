@model NoraGrace.Web.ViewModels.Games.DetailsViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    foreach (var legalMove in Model.GameInfo.LegalMoves)
    {
        <div>
            @Html.ActionLink(legalMove.Description, "ApplyMove", new { id = Model.GameInfo.GameId, move = legalMove.Description });
        </div>
    }

    <div>
        @Html.DisplayFor(model => model.GameInfo.FEN)
    </div>

    @Html.Raw(Json.Encode(Model.GameInfo))
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
