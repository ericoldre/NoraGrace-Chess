<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Sinobyl_WPF_Views="clr-namespace:Sinobyl.WPF.Views" x:Class="Sinobyl.WPF.MainWindow"
        Title="MainWindow" Height="525" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.8*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0">
            <Button VerticalAlignment="Top" Click="Button_Click">
                <TextBlock Text="RemoveMoves"></TextBlock>
            </Button>
            <TextBlock Text="{Binding Path=DragDropContext.DragHandlers.Count}"></TextBlock>

        </StackPanel>
        
        <Sinobyl_WPF_Views:Board DataContext="{Binding}" Grid.Row="1" />
    </Grid>
</Window>
